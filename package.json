{
  "name": "planner",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "next": "16.0.0",
      "zod": "^4.1.12",
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.3.28",
      "@daveyplate/better-auth-ui": "^3.2.9",
      "dotenv": "^17.2.2",
      "tsdown": "^0.15.5"
    }
  },
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "clear": "rm -rf .turbo apps/*/.next",
    "db:push": "turbo -F @planner/db db:push",
    "db:studio": "turbo -F @planner/db db:studio",
    "db:generate": "turbo -F @planner/db db:generate",
    "db:migrate": "turbo -F @planner/db db:migrate",
    "db:seed": "turbo -F @planner/db db:seed",
    "db:reset": "./scripts/db-reset.sh",
    "db:start": "turbo -F @planner/db db:start",
    "db:watch": "turbo -F @planner/db db:watch",
    "db:stop": "turbo -F @planner/db db:stop",
    "db:down": "turbo -F @planner/db db:down"
  },
  "dependencies": {
    "@daveyplate/better-auth-ui": "^3.2.9",
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.4",
    "ultracite": "6.3.2",
    "tsdown": "^0.15.5",
    "@types/node": "^22.13.11"
  },
  "packageManager": "bun@1.3.1"
}
