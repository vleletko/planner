{
  "name": "planner",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@opentelemetry/api": "^1.9.0",
      "next": "^16.0.6",
      "react": "19.2.1",
      "react-dom": "19.2.1",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3",
      "zod": "^4.1.13",
      "@orpc/server": "^1.10.0",
      "@orpc/client": "^1.10.0",
      "@orpc/openapi": "^1.10.0",
      "@orpc/zod": "^1.10.0",
      "better-auth": "^1.3.28",
      "@daveyplate/better-auth-ui": "^3.2.13",
      "dotenv": "^17.2.2",
      "tsdown": "^0.17.0",
      "drizzle-orm": "^0.45.0",
      "pino": "^10.1.0",
      "drizzle-kit": "^0.31.8",
      "pg": "^8.14.1",
      "@types/pg": "^8.11.11",
      "@types/node": "^24.10.1",
      "@types/bun": "^1.1.14",
      "typescript": "^5.7.2"
    }
  },
  "scripts": {
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "clear": "rm -rf .turbo apps/*/.next",
    "db:push": "turbo -F @planner/db db:push",
    "db:studio": "turbo -F @planner/db db:studio",
    "db:generate": "turbo -F @planner/migrate generate",
    "db:migrate": "turbo -F @planner/migrate start",
    "db:seed": "SEED_PROFILE=test turbo -F @planner/migrate start",
    "db:reset": "RESET_DB=true SEED_PROFILE=test turbo -F @planner/migrate start",
    "db:start": "turbo -F @planner/db db:start",
    "db:watch": "turbo -F @planner/db db:watch",
    "db:stop": "turbo -F @planner/db db:stop",
    "db:down": "turbo -F @planner/db db:down",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:storybook": "turbo test:storybook",
    "test:e2e": "bun run --cwd apps/e2e e2e",
    "test:e2e:ui": "bun run --cwd apps/e2e e2e:ui",
    "test:e2e:debug": "bun run --cwd apps/e2e e2e:debug"
  },
  "dependencies": {
    "@daveyplate/better-auth-ui": "^3.3.9",
    "dotenv": "^17.2.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/node": "catalog:",
    "happy-dom": "^20.0.11",
    "tsdown": "catalog:",
    "turbo": "^2.7.1",
    "ultracite": "6.5.0"
  },
  "packageManager": "bun@1.3.1"
}
